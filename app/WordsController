[ApiController]
[Route("api/[controller]")]
public class WordsController : ControllerBase
{
    private readonly DatabaseContext _context; // Din databaskontext

    public WordsController(DatabaseContext context)
    {
        _context = context;
    }

    [HttpGet("random")]
    public IActionResult GetRandomWord()
    {
        var random = new Random();
        var words = _context.Words.ToList(); // Hämta alla ord från databasen
        if (!words.Any()) return NotFound("No words found in the database.");

        var randomWord = words[random.Next(words.Count)];
        return Ok(new { word = randomWord.Text }); // Returnera ett ord som JSON
    }
}